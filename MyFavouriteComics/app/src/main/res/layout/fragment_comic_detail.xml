<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginTop="5dp">

<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/comic_detail"
    style="?android:attr/textAppearanceLarge" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:layout_weight="1" android:padding="16dp" android:textIsSelectable="true"
    tools:context=".ComicDetailFragment"/>

    <CheckBox
        android:id="@+id/comic_favorite" android:text="Favourite"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ComicDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>
</LinearLayout>

